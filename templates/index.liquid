<div class="slider-container">
    {% assign number_of_slides = 7 %}
    <ul id="slider">
        {% for i in (1..number_of_slides) %}
            {% capture slide_enabled %}slideshow_{{ i }}_active{% endcapture %}
            {% capture slide_image %}slideshow_{{ i }}.jpg{% endcapture %}
            {% capture slide_image_alt %}slideshow_{{ i }}_alt{% endcapture %}
            {% capture slide_link %}slideshow_image_{{ i }}_link{% endcapture %}
            {% if settings[slide_enabled] %}
                <li class="slide">
                	{% if settings[slide_link] %}<a href="{{ settings[slide_link] }}">{% endif %}
                    <img src="{{ slide_image | asset_url }}" alt="{{ settings[slide_image_alt] }}" class="slide-img" />
                    {% if settings[slide_link] %}</a>{% endif %}
                </li>
            {% endif %}
        {% endfor %}
    </ul>

    <div id="slider-empty" class="not-found">
        <h2>No slides found</h2>
    </div>
</div><!-- /.slider-container -->

